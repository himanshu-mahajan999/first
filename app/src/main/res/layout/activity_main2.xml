<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.it.himanshu.crudsqllite.Main2Activity">

   <!--     <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary">

        </android.support.v7.widget.Toolbar>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/sqlLite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="sqlLite" />

        <Button
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Message" />
        <Button
            android:id="@+id/FireBase1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="FireBase" />


        <Button
            android:id="@+id/Map"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Map" />


        <Button
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Chat" />

        <Button
            android:id="@+id/gcm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Service" />

        <Button
            android:id="@+id/sensor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sensor" />


    <Button
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="listView" />

    <Button
        android:id="@+id/listViewimage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="listViewimage" />


    <Button
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="RecyclerlistView" />

    <Button
        android:id="@+id/volley"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Volley" />

    <Button
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Tabs" />

    <Button
        android:id="@+id/popUp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PopUp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="10"
            android:text="Seekbar" />

        <TextView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

    <Button
        android:id="@+id/asy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Asy" />

        <Button
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Navigation" />
    </LinearLayout>
</ScrollView>










